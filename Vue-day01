    <div id="app">
        <div>{{msg}}</div>
    </div>
    <!-- 事件函数调用，直接绑定函数名称 -->
    <button @click='handle'>点击</button>
    <!--  如果要传递参数，为@click=‘函数名（“参数”，$event）’-->
    <script type="text/javascript" src=""></script>
    <script type="text/javascript">
        var vm = new Vue({
            el: '#app',
            data: {
                msg: 1
            },
            methods: {
                handle: function() {
                    tis.num++;
                }
            }
        });
